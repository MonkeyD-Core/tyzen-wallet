<?xml version="1.0" encoding="utf-8"?>
<!-- gradient effect for receive button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:centerColor="#F69757"
                android:endColor="#EF5A4C" android:gradientRadius="400dp"
                android:startColor="#EF5A4C"

                android:type="linear"  />
            <size android:width="100dp" android:height="44dp"></size>
            <corners android:radius="30dp"></corners>
        </shape>

    </item>
</selector>