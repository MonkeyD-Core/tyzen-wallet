<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Withdrawal">
    <!--content section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:src="@drawable/arrow_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SELECT TYPE OF WITHDRAWAL"
                    android:textColor="#2F89C5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <!--This is Types button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bxc"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editext2"
                        android:drawableLeft="@drawable/logo32"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="20dp"
                        android:text="SEND TO TZN ADDRESS"
                        android:textColor="#0C94EA"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btc"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editext2"
                        android:drawableLeft="@drawable/btc32"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="20dp"
                        android:text="SEND TO BITCOIN"
                        android:textColor="#0C94EA"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/bank"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/editext2"
                        android:drawableLeft="@drawable/bank32"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="20dp"
                        android:text="SEND TO BANK"
                        android:textColor="#0C94EA"
                        android:textSize="15dp" />
                </LinearLayout>
                <!-- Request custom amount -->
            </LinearLayout>
        </RelativeLayout>
        <!-- personal wallet -->
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>